<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".view.DetalhesDepartamentoActivity">

    <LinearLayout
        android:id="@+id/LienarLayout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxHeight="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="#ECEDEE"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvLabelIdDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Id"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/LienarLayout1"
        app:layout_constraintTop_toTopOf="@id/LienarLayout1"
        app:layout_constraintBottom_toTopOf="@id/tvLabelNameDepartment"
        />

    <TextView
        android:id="@+id/tvIdDepartment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"
        android:textSize="17sp"
        tools:text="Id of Department"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/tvLabelIdDepartment"
        app:layout_constraintTop_toTopOf="@+id/tvLabelIdDepartment"
        app:layout_constraintBottom_toBottomOf="@id/tvLabelIdDepartment"
        />


    <TextView
        android:id="@+id/tvLabelNameDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Department"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@id/LienarLayout1"
        app:layout_constraintTop_toBottomOf="@id/tvLabelIdDepartment"
        app:layout_constraintBottom_toTopOf="@id/tvNameDepartment"
        />

    <TextView
        android:id="@+id/tvNameDepartment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"
        android:textSize="17sp"
        tools:text="Name Of Department"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@id/LienarLayout1"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelNameDepartment"
        app:layout_constraintBottom_toBottomOf="@id/LienarLayout1"
        />


    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="@color/personal0002"

        app:layout_constraintBottom_toBottomOf="@id/LienarLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/LienarLayout1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

